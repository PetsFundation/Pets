{% extends 'base.html.twig' %}

{% block body %}
    <h1>anuncios</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ anuncios.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ anuncios.nombre }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ anuncios.tipo }}</td>
            </tr>
            <tr>
                <th>Raza</th>
                <td>{{ anuncios.raza }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ anuncios.sexo }}</td>
            </tr>
            <tr>
                <th>Nacimiento</th>
                <td>{% if anuncios.nacimiento %}{{ anuncios.nacimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Propietario</th>
                <td>{{ anuncios.propietario }}</td>
            </tr>
            <tr>
                <th>Pedigri</th>
                <td>{% if anuncios.pedigri %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('anuncios_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('anuncios_edit', { 'id': anuncios.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
