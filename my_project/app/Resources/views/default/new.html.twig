<form action="{{ path('formulario') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    <div style="background-color:red; color:blue;">
    {{ form_label(form.task, 'Task Description') }}
    {{ form_row(form.task) }}
    </div>
    {{ form_row(form.dueDate) }}

    {{ form_rest(form) }}

    <input type="submit" />
</form>